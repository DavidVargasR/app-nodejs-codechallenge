{
  "compilerOptions": {
    "lib": ["ES2022"],
    "outDir": "build",
    "sourceMap": true,
    "removeComments": false,
    "module": "CommonJS",
    "target": "ES2022",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
